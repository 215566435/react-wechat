page {
    background: #282c34;
}

.container {
    text-align: center;
    margin-top: 30px;
}

.title {
    color: #1890ff;
    font-size: 22px;
}

.sub-title {
    margin-top: 25px;
    margin-bottom: 25px;
    color: white;
    font-size: 16px;
    font-weight: 200;
}

.logo {
    animation: spin 5000ms infinite linear;
}

.rw-button {
    margin-left: 22px;
    margin-right: 22px;
    padding: 10px;
    background: #1890ff;
    color: white;
    font-weight: 200;
}

@keyframes spin {
    0% {
        transform: rotate(360deg);
    }
    100% {
        transform: rotate(0deg);
    }
}